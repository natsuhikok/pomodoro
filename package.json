{
  "name": "electron-starter",
  "version": "1.0.0",
  "main": "main.js",
  "config": {
    "appDir": "./dist",
    "rendererDir": "./dist/renderer",
    "buildOptions": "--out=release --electron-version=1.6.2 --overwrite"
  },
  "scripts": {
    "build:webpack": "webpack -p",
    "build:template": "pug src/renderer/**.pug --out $npm_package_config_rendererDir --pretty",
    "build:packageJson": "copy src/**/package.json $npm_package_config_appDir",
    "release:osx": "electron-packager $npm_package_config_appDir $npm_package_config_buildOptions",
    "watch:webpack": "webpack --watch",
    "watch:template": "pug src/renderer/**.pug --out $npm_package_config_rendererDir --pretty --watch",
    "server": "gulp server",
    "dev:build": "npm-run-all -p clean build:*",
    "dev:watch": "npm-run-all -p watch:* server",
    "dev": "npm-run-all -s dev:build dev:watch",
    "start": "npm-run-all dev",
    "build": "npm-run-all clean build:* release:osx",
    "clean": "rimraf $npm_package_config_appDir"
  },
  "keywords": [
    "Electron"
  ],
  "dependencies": {
    "react": "^15.4.2",
    "electron": "1.6.2",
    "react-dom": "^15.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "copy": "^0.3.0",
    "electron-connect": "^0.6.1",
    "electron-packager": "^8.7.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "gulp": "^3.9.1",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.2"
  }
}
